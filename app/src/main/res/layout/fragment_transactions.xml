<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Fragments.TransactionsFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/titol_transactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Totes les transaccions"
                android:textColor="@color/textPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/yearSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:spinnerMode="dropdown"
                app:layout_constraintBottom_toBottomOf="@+id/titol_transactions"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/titol_transactions" />

            <HorizontalScrollView
                android:id="@+id/selectors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                app:layout_constraintTop_toBottomOf="@+id/titol_transactions">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="16dp"
                        android:layout_height="20dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/gener"
                        style="@style/selector_button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:text="Gener"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/febrer"
                        style="@style/selector_button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:text="Febrer"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/marc"
                        style="@style/selector_button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:text="MarÃ§"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/abril"
                        style="@style/selector_button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:text="Abril"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/maig"
                        style="@style/selector_button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:text="Maig"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/juny"
                        style="@style/selector_button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:text="Juny"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/juliol"
                        style="@style/selector_button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:text="Juliol"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/agost"
                        style="@style/selector_button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:text="Agost"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/setembre"
                        style="@style/selector_button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:text="Setembre"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/octubre"
                        style="@style/selector_button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:text="Octubre"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/novembre"
                        style="@style/selector_button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:text="Novembre"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/desembre"
                        style="@style/selector_button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="Desembre"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/noTransactionsDoneText"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_margin="16dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/textSecondary"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/selectors" />

            <androidx.cardview.widget.CardView
                android:id="@+id/monthlyCard"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="16dp"
                android:backgroundTint="@color/white"
                android:elevation="0dp"
                app:cardCornerRadius="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selectors">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textIngres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:text="Ingressos mensuals"
                        android:textColor="@color/textSecondary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/ingressos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="4dp"
                        android:text=""
                        android:textColor="@color/textPrimary"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textIngres" />

                    <ImageView
                        android:id="@+id/positive"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginStart="10dp"
                        android:contentDescription="Icon"
                        android:rotation="180"
                        android:src="@drawable/ic_positive_amount"
                        app:layout_constraintBottom_toBottomOf="@id/textIngres"
                        app:layout_constraintStart_toEndOf="@id/textIngres"
                        app:layout_constraintTop_toTopOf="@id/textIngres" />

                    <TextView
                        android:id="@+id/despeses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:text="Despeses mensuals"
                        android:textColor="@color/textSecondary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ingressos" />

                    <TextView
                        android:id="@+id/expense"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="4dp"
                        android:text=""
                        android:textColor="@color/textPrimary"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/despeses" />

                    <ImageView
                        android:id="@+id/negative"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="10dp"
                        android:contentDescription="Icon"
                        android:rotation="180"
                        android:src="@drawable/ic_negative_transaction"
                        app:layout_constraintBottom_toBottomOf="@id/despeses"
                        app:layout_constraintStart_toEndOf="@id/despeses"
                        app:layout_constraintTop_toTopOf="@id/despeses" />


                    <org.eazegraph.lib.charts.PieChart
                        android:id="@+id/piechart"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        app:egEmptyDataText="Sense transaccions"
                        app:egInnerPaddingColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/transactionsInFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="22dp"
                android:text="Les teves transaccions"
                android:textColor="@color/textPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/monthlyCard" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recentRecyclerViewTransactions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:listitem="@layout/transaction_item"
                android:layout_marginBottom="20dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/transactionsInFragment"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>